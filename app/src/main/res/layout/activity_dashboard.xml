<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.geniusplaza.usertouserchat.DashboardActivity"
    android:background="@drawable/login_background">

    <Button
        android:id="@+id/buttonUserToChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User To User Chat"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="143dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onClickUserToUser"/>

    <Button
        android:id="@+id/buttonGroupChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Chat"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="@+id/buttonUserToChat"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonUserToChat"
        android:onClick="onClickGroupChat"/>
</android.support.constraint.ConstraintLayout>
